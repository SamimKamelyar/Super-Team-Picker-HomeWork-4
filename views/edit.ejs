<%- include("./partials/header") %>
<div class="card">
  <div class="card-body">
    <h3 class="card-title"><%= cohort.name %></h3>
    <p class="card-text"><%= cohort.members %></p>
    <form action="/cohorts/<%= cohort.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input class="btn btn-danger" type="submit" value="Delete">
      <a href="/cohorts/<%= cohort.id %>" class="btn btn-primary ml-2">Assign Teams</a>
    </form>
    <hr>
    <form action="/cohorts/<%= cohort.id %>" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <div class="form-group">
        <label for="logoUrl">Logo Url</label>
        <input type="text" class="form-control" name="logoUrl" id="logoUrl" value="<%= cohort.logoUrl %>">
      </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" id="name" value="<%= cohort.name %>">
      </div>
      <div class="form-group">
        <label for="members">Members</label>
        <textarea class="form-control members-field" name="members" id="members"
          rows="3"><%= cohort.members %></textarea>
        <div class="align-right mt-4">
          <input class="btn btn-primary" type="submit" value="Update">
        </div>
    </form>
  </div>
</div>
<%- include("./partials/footer") %>